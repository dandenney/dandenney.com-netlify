<section>
	{% for post in postslist | reverse %}
		<article class="dd-u-b-b" {% if post.url == url %} data-current="current item"{% endif %}>
			<h3 class="dd-u-mb-0">
				<a href="{{ post.url | url }}">
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</a>
			</h3>
			{% if post.data.summary %}
				<p>
					{{ post.data.summary }}
				</p>
			{% endif %}
			<p class="dd-u-fx dd-u-fx-aic dd-u-mb-0">

				{% if post.data.tags %}
					{% for tag in post.data.tags %}
						{%- if tag != "post" -%}
							{% set tagUrl %}/tags/{{ tag }}/{% endset %}
						<small><a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a></small>
						{%- endif -%}
					{% endfor %}
				{% endif %}

				<span class="dd-u-c-white-sand dd-u-ml-8">|</span>

				<time class="dd-u-ml-8" datetime="{{ post.date | machineDate }}">
					<small class="dd-u-c-gray">{{ post.date | readableDate }}</small>
				</time>
			</p>
		</article>
	{% endfor %}
</section>
